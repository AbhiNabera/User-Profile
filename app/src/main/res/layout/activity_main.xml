<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/header_cover_image"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            android:src="@drawable/header" />

        <TextView
            android:id="@+id/user_profile_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@+id/header_cover_image"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="-60dp"
            android:background="@drawable/profile_circular_border_imageview"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:text="A"
            android:textColor="#fff"
            android:textSize="60sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/profile_layout"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/header_cover_image"
            android:elevation="4dp"
            android:paddingBottom="24dp">


            <ImageView
                android:id="@+id/refresh"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/refresh" />

            <ImageView
                android:id="@+id/edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:visibility="visible"
                android:layout_toEndOf="@+id/user_profile_short_bio"
                android:layout_toRightOf="@+id/user_profile_short_bio"
                android:src="@drawable/edit" />

            <ImageView
                android:id="@+id/save"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="18dp"
                android:layout_marginStart="18dp"
                android:visibility="gone"
                android:layout_toEndOf="@+id/user_profile_short_bio"
                android:layout_toRightOf="@+id/user_profile_short_bio"
                android:src="@drawable/save" />

            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="Abhinandan Nabera"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/user_profile_short_bio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/user_profile_name"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:text="Welcome, 102115038"
                android:textSize="14sp"
                android:textStyle="bold" />
        </RelativeLayout>


        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_layout"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/email"
                android:elevation="4dp"
                android:padding="20dp"
                android:visibility="visible"
                android:text="  abhinandannabera@yahoo.in" />

            <EditText
                android:id="@+id/ed_email"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/email"
                android:elevation="4dp"
                android:padding="20dp"
                android:visibility="gone"
                android:text="  abhinandannabera@yahoo.in" />

            <TextView
                android:id="@+id/mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/mobile"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="  +91- 8939033399" />

            <EditText
                android:id="@+id/ed_mobile"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:layout_marginBottom="3dp"
                android:layout_marginTop="3dp"
                android:background="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/mobile"
                android:elevation="4dp"
                android:padding="20dp"
                android:visibility="gone"
                android:text="  +91- 8939033399" />

            <TextView
                android:id="@+id/address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="false"
                android:drawableLeft="@drawable/address"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="  Garnet C 19" />

            <EditText
                android:id="@+id/ed_address"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:background="#fff"
                android:clickable="false"
                android:visibility="gone"
                android:drawableLeft="@drawable/address"
                android:elevation="4dp"
                android:padding="20dp"
                android:text="  Garnet C 19" />

        </LinearLayout>
    </RelativeLayout>
</ScrollView>